mixin case-inner(title)
    .cases-card
        .cases-card__video
            button.start-video__btn
                svg.svg-play
                    use(href="./img/spriteSvg.svg#svg-play")
                svg.svg-play-border 
                    circle(cx="25" cy="25" r="22" fill="transparent")
        .cases-card-desc
            h3.cases-card__title #{title} 
            .cases-card-tags 
                .cases-label Работа в ИТ
                .cases-label Работа в ИТ
                .cases-label Работа в ИТ
                .cases-label Работа в ИТ
                .cases-label Работа в ИТ
            .cases-card__text 
                block
            button.cases-card__expand Читать далее
            button.cases-card__close.hidden
                svg.svg-arrow-up
                    use(href="./img/spriteSvg.svg#svg-arrow-up")